@model CandyFramework.Entity.Entity.ViewModel.VirtualViewModel.LoginView

@{
    ViewBag.Title = "Giriş";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @ViewBag.ApplicationName</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="card card-container">
            <img id="profile-img" class="profile-img-card" src="~/images/Candy.png" />
            <p id="profile-name" class="profile-name-card">@(ViewBag.PageErrorText)</p>
            <form class="form-signin" method="post">
                <span id="reauth-email" class="reauth-email"></span>
                @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "Kullanıcı Adı", autofocus = "autofocus", required = "required" })
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Şifre", required = "required" })
                <div id="remember" class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => model.RememberMe) Beni hatırla
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit" style="cursor: pointer;">Giriş</button>
            </form><!-- /form -->
        </div><!-- /card-container -->
    </div><!-- /container -->
</body>
</html>

